@model List<Alumno>
@{
    ViewData["Title"] = "Lista de Alumnos";
}

<div class="container">
    <h1 class="display-4 text-center mb-4">Lista de Alumnos</h1>
    <a asp-controller="Home" asp-action="CrearAlumno">CrearNuevo</a>
    <i class="fas fa-save"></i>
    

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>DNI</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Teléfono</th>
                    <th>Curso</th>
                    <th>Edad</th>
                </tr>
            </thead>
            <tbody>



                @{

                    int id = 0;

                }
                @foreach (var alumno in Model)
                    {
                       
                    <tr>
                        
                        <td>@alumno.dni</td>
                        <td>@alumno.Nombre</td>
                        <td>@alumno.Apellidos</td>
                        <td>@alumno.Telefono</td>
                        <td>@alumno.Curso</td>
                        <td>@alumno.Edad</td>
                        <td>

                            <a asp-action="Editar" asp-route-id="@id">Editar</a>
                            <a asp-action="Borrar" asp-route-id="@id">Borrar</a>
                            <i class="fas fa-save"></i>

                        </td>
                    </tr>
                        id++;
                    }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            No hay alumnos registrados.
        </div>
    }
</div>

