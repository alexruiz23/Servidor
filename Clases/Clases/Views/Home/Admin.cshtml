@model Taller
@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">
    <h1 class="text-center mb-4">@Model.nombre</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="h4 mb-0">Listado de Vehículos</h2>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var p in Model.coches)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="card-title mb-0">@p.modelo (@p.año)</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><strong>Matrícula:</strong> @p.matricula</p>

                                <div class="mt-3">
                                    <h6 class="border-bottom pb-2">Información del Propietario</h6>
                                    @foreach (var d in p.dueños)
                                    {
                                        <div class="mb-2">
                                            <p class="mb-1"><i class="bi bi-person"></i> @d.nombre @d.apellidos</p>
                                            <p class="mb-1"><small><i class="bi bi-card-text"></i> DNI: @d.DNI</small></p>
                                            <p class="mb-1"><small><i class="bi bi-telephone"></i> @d.telefono</small></p>
                                            <p class="mb-1"><small><i class="bi bi-geo-alt"></i> @d.direcciones</small></p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h2 class="h4 mb-0">Personal Mecánico</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>DNI</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                            <th>Fecha Alta</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model.mecanicos)
                        {
                            <tr>
                                <td>@m.nombre @m.apellidos</td>
                                <td>@m.DNI</td>
                                <td>@m.telefono</td>
                                <td>@m.email</td>
                                <td>@m.fechaalata</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">